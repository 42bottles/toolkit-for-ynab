{
  "name": "toolkit-for-ynab",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.22.1",
    "babel-eslint": "7",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chokidar": "^1.6.0",
    "clean-webpack-plugin": "^0.1.17",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "glob": "^7.1.1",
    "jest": "^22.0.4",
    "jest-dot-reporter": "^1.0.3",
    "jest-localstorage-mock": "^2.1.0",
    "to-string-loader": "^1.1.5",
    "webpack": "^3.10.0"
  },
  "scripts": {
    "build": "yarn && yarn gen && yarn webpack && yarn build:legacy",
    "build:legacy": "babel src/extension/legacy --compact false --quiet --out-dir dist/web-accessibles/legacy",
    "build:desktop": "scripts/publish_for_desktop",
    "lint": "yarn && eslint --ignore-path .eslintignore ./src ./scripts",
    "test": "yarn && yarn gen && jest",
    "watch": "yarn && node scripts/watch.js",
    "webpack": "webpack",
    "gen": "yarn gen-settings && yarn gen-featureIndex && yarn gen-feedChanges",
    "gen:featureIndex": "node scripts/generateFeatureIndex",
    "gen:feedChanges": "node scripts/generateFeedChanges",
    "gen:settings": "node scripts/generateSettings",
    "gen:docs": "yarn gen:settings && node scripts/generateDocs",
    "l10n:push": "scripts/update_l10n_strings",
    "l10n:pull": "scripts/get_l10ns"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageReporters": [
      "text"
    ],
    "moduleNameMapper": {
      "toolkit/(.*)": "<rootDir>/src/$1"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/setup.js",
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "jest-dot-reporter"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "defaultFeatures": [
    "BudgetBalanceToZero",
    "enlargeCategoriesDropdown",
    "PrintingImprovements",
    "rightClickToEdit",
    "ShowIntercom",
    "SplitKeyboardShortcut",
    "reports"
  ]
}
