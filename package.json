{
  "name": "toolkit-for-ynab",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.22.1",
    "babel-eslint": "7",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chokidar": "^1.6.0",
    "clean-webpack-plugin": "^0.1.17",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "glob": "^7.1.1",
    "jest": "^22.0.4",
    "to-string-loader": "^1.1.5",
    "webpack": "^3.10.0"
  },
  "scripts": {
    "build": "./build",
    "watch": "./watch",
    "webpack": "webpack",
    "test": "jest",
    "lint": "eslint --ignore-path .eslintignore ./src ./tasks",
    "legacy-babel": "babel src/extension/legacy --compact false --quiet --out-dir dist/web-accessibles/legacy",
    "gen-settings": "node tasks/generateSettings",
    "gen-featureIndex": "node tasks/generateFeatureIndex",
    "gen-feedChanges": "node tasks/generateFeedChanges"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "toolkit/(.*)": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/mocks/web-extensions/setup.js",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "defaultFeatures": [
    "BudgetBalanceToZero",
    "enlargeCategoriesDropdown",
    "PrintingImprovements",
    "rightClickToEdit",
    "ShowIntercom",
    "SplitKeyboardShortcut",
    "reports"
  ]
}
